  <%-include('../Common/Header.ejs')%>
  <link rel="stylesheet" href="/CSS/style.css" />
</head>
<body>
  <%-include('../Common/Navbar.ejs')%>
  <h3>All Items</h3>
  <%let i=0;%>
  <%if(data.length>0){%>
    <div class="container">
      <div class="row">
          <div class="col">
          <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Company</th>
                <th scope="col">Price</th>
                <th scope="col">Descriptions</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <%for(let item of data){%>
                <tr>
                  <th scope="row"><%=i+1%></th>
                  <td><img src="../../<%=item.item_img%>" alt="" style="width:100px;height:100px;border-radius:50%;"></td>
                  <td><%=item.item_title%></td>
                  <td><%=item.company%></td>
                  <td><%=item.item_price%></td>
                  <td><%=item.item_desc%></td>
                  <td><button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="document.querySelector('iframe').src='/edititems/<%=item._id%>'">Edit</button></td>
                  <td><a href="/deleteitems/<%=item._id%>" class="btn btn-light" onclick="alert('Do you really want to delete?')">Delete</a></td>
                </tr>
              <%i++%>
            <%}%>
            </tbody>
          </table>
           
          </div>
          
      </div>
    </div>
     <%}else{%>
      <div>
        <h1>Data not found</h1>
      </div>
      <%}%>
      <div class="modal-fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
              <div class="ratio ratio-16x9">
                <iframe></iframe>
              </div>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>
  <%-include('../Common/Footer.ejs')%>